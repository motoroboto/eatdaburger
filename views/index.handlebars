<div class="jumbotron">
    <div class="container shadow for-about">
        <h1>Da Burgers</h1>
        <h2>Home of Da Burger</h2>
    </div>
</div>

<div class='container'>
    <div class='row'>
        <div class='column eat-burgers'>
            <h2>Burgers that are ready to eat!</h2>
            <ul>
                {{#each burger}}
                {{#unless devoured}}
                {{> burger/burger-block devoured=true}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class='column eaten-burgers'>
            <h2>Burgers that have been eaten...</h2>

            <ul>
                {{#each burger}}
                {{#if devoured}}
                {{> burger/burger-block devoured=false}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <div class='row add-burger'>
        <h2 class='add-burger-header'>Add a Burger </h2>
        <form class="create-form">

            <div class="form-group">
                <input type="text" id="ba" name="burger_name">
            </div>

            <button type="submit" class="submit">New Burger</button>
        </form>
    </div>
</div>