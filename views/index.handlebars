<div class="jumbotron">
    <div class="container for-about">
        <h1>Da Burgers</h1>
        <h2>Home of Da Burger</h2>
    </div>
</div>

<div class='container'>
    <div class='row'>
        <div class='column'>
            <h2>Burgers that are not Devoured!</h2>

            {{!-- <ul> --}}
            {{#each burger}}
            {{#unless devoured}}
            {{> burger/burger-block devoured=true}}
            {{/unless}}
            {{/each}}
            {{!-- </ul> --}}
        </div>
        <div class='column'>
            <h2>Burgers that ARE devoured!</h2>

            <ul>
                {{#each burger}}
                {{#if devoured}}
                {{> burger/burger-block devoured=false}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <div class='row add-burger'>
        <h2>Add a Burger</h2>
        <form class="create-form">

            <div class="form-group">
                <label for="ba">Burger Name:</label>
                <input type="text" id="ba" name="burger_name">
            </div>

            <button type="submit">Add A Burger!</button>
        </form>
    </div>
</div>